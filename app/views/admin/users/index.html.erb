<table class="ink-table alternating">
  <thead>
    <tr>
      <th class="align-left">E-mail</th>
      <th class="align-left">Last Login</th>
      <th class="align-left">Action</th>
    </tr>
  </thead>
  <tbody>
<% @users.each do |user|  %>
    <tr>
      <td><%= user.email %></td>
      <td><%= user.last_login ? user.last_login.to_formatted_s(:long_ordinal) : "Never" %></td>
      <td>
        <%= link_to '<i class="fa fa-edit"></i>'.html_safe, user %>
        <%= user.id != 1 ? link_to('<i class="fa fa-trash-o"></i>'.html_safe, user, method: :delete,
              data: { confirm: "Are you sure you want to delete this user?" }) : "" %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>